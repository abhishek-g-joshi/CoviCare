<%- include ("../partials/header") %>

<div class="container">
	<div class="row">
			<div class="col-12 col-md-9 new-edit-forms">
				<h2 class="text-center title-font">Edit <%= campground.name %></h2>
				<form action="/covicare/<%= campground._id %>?_method=PUT" method="POST">
					<!-- Note that the action="__" should equal the name of the post request url. -->
					<div class="form-group">
						<label for="name">Name</label>
						<input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<label for="bedCount">Bed Count</label>
						<input class="form-control" type="number" name="bedCount" id="bedCount" placeholder="number of beds available" min="0" step="1" value="<%= campground.bedCount %>">
					</div>
					<div class="form-group">
						<label for="remdesivirInjection">Remdesivir Injection</label>
						<input class="form-control" type="number" name="remdesivirInjection" id="remdesivirInjection" placeholder="number of Remdesivir Injection available" min="0" step="1" value="<%= campground.remdesivirInjection %>">
					</div>
					<div class="form-group">
					<div class="form-group">
						<label for="image">Image Url</label>
						<input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>">
						<!-- We use the name attribute in our route to grab the data from our request.body -->
					</div>
					<div class="form-group">
						<label for="address">Address</label>
						<input class="form-control" type="text" name="address" id="address" placeholder="Mention full Address" value="<%= campground.address %>">
					</div>
					<div class="form-group">
						<label for="description">Description</label>
						<input class="form-control" type="text" id="description" name="campground[description]" value="<%= campground.description %>"></input>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-block btn-success">Submit!</button>
					</div>
				</form>
				<a href="/covicare"><i class="fa fa-angle-left back" aria-hidden="true"></i> Back</a>
			</div>
	</div>

</div>

<%- include ("../partials/footer") %>